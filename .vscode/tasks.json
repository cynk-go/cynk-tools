{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Auto Git Push",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "git add -A; if ($?) { git commit -m \"Auto-commit: $(Get-Date -Format 'yyyy-MM-dd HH:mm:ss')\" }; if ($?) { git push }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}